generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile?
  links     Link[]
}

model Profile {
  id        String   @id @default(cuid())
  bio       String?
  avatarUrl String?
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
}

model Link {
  id        String   @id @default(cuid())
  title     String
  url       String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

